<Tela>:
    orientation: "vertical"
    
    FloatLayout:
        Label:
            text: "Conversor de cores RGB para Kivy"
            font_size: 17
            pos: (0, 150)
        Label:
            text: "Criado por: Samuel Araujo"    
            font_size: 12
            pos: (0, 130)
        TextInput:
            id: digitado
            hint_text: "Digite a cor desejada em RGB"
            multiline: False
            pos: (40, 260)
            size_hint: (0.8, 0.07)
            focus: True
            on_text_validate: root.tratar_entrada()

        Button:
            id: botao
            text: "Converter"    
            pos: (130, 210)
            size_hint: (0.30, 0.1)
            on_press: root.tratar_entrada()


        TextInput:
            id: output
            pos: (40, 20)
            readonly: True
            size_hint: (0.8, 0.45)
